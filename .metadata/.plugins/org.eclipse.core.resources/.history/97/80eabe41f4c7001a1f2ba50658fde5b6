
public class Ex2 {

	public static void main(String[] args) {
		
		
		/*
		 * 산술 연산자 ( +, -, *, /, %)
		 * -기본 사칙현산(+, -, *, /)과 나머지 연산자로 구성
		 * -나눗셈 연산자(/)는 나눗셈 결과 중 몫만 계산
		 * -나머지 연산자(%)는 나눗셈 결과 중 나머지만 계산
		 */
		
		int a = 10, b = 3, c;
		
		c = a+b;
		System.out.println(a + "+" + b +"="+c);
		
		c = a-b;
		System.out.println(a + "+" + b +"="+c);
		
		c = a*b;
		System.out.println(a + "+" + b +"="+c);
		
		c = a/b;
		System.out.println(a + "+" + b +"="+c);
		
		c = a%b;
		System.out.println(a + "+" + b +"="+c);
		
		
		
	}

}
